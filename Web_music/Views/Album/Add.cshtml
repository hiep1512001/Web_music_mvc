@model Web_music.Models.Singer_Genre_album
@{
    Layout = null;
    ViewBag.Title = "Add";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/8e44eaf2c8.js" crossorigin="anonymous"></script>
    <link href="~/asset/admin/css/style.css" rel="stylesheet" />
    <title>Music</title>

</head>
@*<% //In case, if Admin session is not set, redirect to Login page
    if((request.getSession(false).getAttribute("Admin")== null) )
    {
    %>
    <jsp:forward page="/pages/login.jsp"></jsp:forward>
    <%} %>*@
<body>
    <form action="~/Album/Add" , method="post" enctype='multipart/form-data'>
        <div class="header">
            <div class="col-2"></div>
            <div class="col-10">
                <nav class="navbar navbar-expand-lg">
                    <div class="folder-list_header collapse navbar-collapse" id="navbarSupportedContent">
                        <!-- back next button -->
                    </div>
                </nav>
            </div>
        </div>
        <div class="container-fluid">
            <div class="main">
                <div class="row">
                    <div class="menu-bar col-2">
                        <div class="navbar-nav me-auto mb-2 mb-lg-0">
                            <div class="title-app">
                                <p>Music Web</p>
                            </div>
                        </div>
                        <!-- nemu bar -->
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="~/HomeAdmint/Index">
                                    <i class="fa-solid fa-house"></i>
                                    Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Search/Index">
                                    <i class="fa-solid fa-magnifying-glass"></i>
                                    Search
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="~/Song/Add">
                                    <i class="bi bi-plus-circle-fill"></i>
                                    Add Music
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Album/Add">
                                    <i class="bi bi-journal-plus"></i>
                                    Add Album
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Singer/Add">
                                    <i class="bi bi-person-plus-fill"></i>
                                    Add Singer
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Song/GetSong">
                                    <i class="bi bi-file-earmark-music-fill"></i>
                                    Song Manager
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Album/GetAlbum">
                                    <i class="bi bi-journal-album"></i>
                                    Album Manager
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Home/LogOut">
                                    <i class="bi bi-box-arrow-left"></i>
                                    Log Out
                                </a>
                            </li>

                        </ul>
                    </div>
                    <div class="folder-list col-10">

                        <div class="list-items">
                            <!-- Name category vs see all music in  ccategory-->
                            <div class="title-items">
                                <p>Add Album</p>


                            </div>
                                                            @{
                                                                if (ViewBag.Message != null)
                                                                {
                                                                    if (ViewBag.Message == "Add success!")
                                                                    {
                                            <p style="color: green;">
                                                @ViewBag.Message
                                            </p>
                                        }
                                        else
                                        {
                                            <p style="color: red;">
                                                @ViewBag.Message
                                            </p>
                                        }
                                    }
                                }
                        </div>
                        <!-- name music -->
                        <div class="row">
                            <div class="addmusic">
                                <p style="color: white;">
                                    Name Album
                                    <br>
@*                                <p style="color: red;">${errorString}</p>*@
                                <div class="input-group mb-3">
                                    <input type="text" name='AlbumName' class="form-control" placeholder="Input name music here!">
                                </div>
                                </p>
                            </div>
                            <!-- Singer -->
                            <div class="Singer">
                                <p style="color: white;">Singer </p>
                                <div class="input-group mb-3">
                                    <select name='NameSinger' class="custom-select" id="inputGroupSelect02">
                                        @{ 
                                            foreach(var item in Model.listSinger)
            {
                                                                                <option value="@item.ID_SINGER">@item.NAME_SINGER</option>
            }
                                        }
@*                                        <c:forEach items="${singerList}" var="singer">
                                            <option value="${singer.id}">${singer.name}</option>
                                        </c:forEach>*@
                                    </select>
                                    <div class="input-group-append">
                                        <a class="btn btn-primary" href="~/Singer/Add" role="button">Add Singer</a>
                                        <a class="btn btn-primary" href="GetSinger" role="button">Singer Manager</a>

                                    </div>
                                </div>



                            </div>

                        </div>

                        <!-- add Category -->
                        <p style="color: white;">Genre </p>

                        <div class="input-group mb-3">
                            <select name='GenreAlbum' class="custom-select " id="inputGroupSelect02">
                                @*                                <c:forEach items="${genreList}" var="genre">
            <option value="${genre.id}">${genre.name}</option>
        </c:forEach>*@
                                @{
                                    foreach (var item in Model.listGenre)
                                    {
                                        <option value="@item.ID_GENRE">@item.NAME_GENRE</option>
                                    }
                                }
                            </select>
                            <div class="input-group-append">
                                <a class="btn btn-primary" href="~/Genre/Add" role="button">Add Genres</a>
                                <a class="btn btn-primary" href="GetGenres" role="button">Category Manager</a>
                            </div>
                        </div>
                        <!-- choose file  -->
                        <p style="color: white;">
                            Choose Album Picture
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" name="Image" class="custom-file-input" id="inputGroupFile04">
                                    <label class="custom-file-label" for="inputGroupFile04">Choose file</label>
                                </div>

                            </div>
                        </p>
                        <!--add music  -->
                        <div class="addmusic">

                            <button type="submit" class="btn btn-success">Add Album</button>
                        </div>

                    </div>

                </div>
            </div>

        </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
            crossorigin="anonymous"></script>

</body>
</html>